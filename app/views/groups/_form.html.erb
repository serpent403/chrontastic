<div class="row navbar-clearance">
  <%= form_for @group do |f| %>
    <% if @group.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@group.errors.count, "error") %> prohibited
	        this article from being saved:
     	 </h2>
        <ul>
          <% @group.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="panel panel-default webform">
      <div class="panel-heading">
        <h4><%= "Create Group" %></h4>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description %><br />
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :image_attachment %><br />
          <%= f.file_field :image_attachment, class: "form-control" %>
        </div>
        <%= f.submit :default => "Submit", class: "btn btn-primary btn-sm" %>
        <%= link_to 'Back',groups_path, class: "btn btn-primary btn-sm" %>
      </div> <!-- panel-body -->
    </div> <!-- panel -->
  <% end %>
</div>
